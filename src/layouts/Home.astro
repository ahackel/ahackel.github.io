---
import Layout from '../layouts/Layout.astro';
import image from '../images/andreashackel.png';
import Portrait from '../components/Portrait.astro';
---

<Layout title="Andreas Hackel">
    <article class="home">
        <h1>Welcome</h1>
        <Portrait src={image} useShader={true} />
        <p>
            <slot />
        </p>
    </article>
</Layout>

<style is:global>
    article.home {
        padding: 1rem;
        max-width: 50rem;
        margin: auto;
		font-size: 1.5em;
		line-height: 2em;
		text-align: center;
    }
</style>