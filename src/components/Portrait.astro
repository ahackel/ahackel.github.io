---
import ShaderImage from "./ShaderImage.astro";
import shader from "../shaders/pattern.glsl?raw";

export interface Props {
	src: string;
    useShader?: boolean;
}

const { src, useShader = false } = Astro.props;
---
{ useShader ? <ShaderImage src={src} shader={shader} /> : <img class="portrait" src={src} /> }

<style is:global>
    img.portrait {
        max-width: 20rem;
        margin: 0 auto;
        display: block;
        border-radius: 100%;
    }
</style>